<form
  method="post"
  action="{{ path('app_stapling_config_delete', {'id': stapling_config.id}) }}"
  onsubmit="return confirm('Are you sure you want to delete this item?');">
  <input
    type="hidden"
    name="_token"
    value="{{ csrf_token('delete' ~ stapling_config.id) }}">
  <button
    class="btn btn-danger"
  >Delete</button>
</form>
